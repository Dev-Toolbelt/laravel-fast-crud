{
    "name": "dev-toolbelt/laravel-fast-crud",
    "description": "Laravel package for rapid CRUD API scaffolding with filtering, sorting, pagination and CSV export",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "crud",
        "api",
        "rest",
        "restful",
        "scaffold",
        "eloquent",
        "controller",
        "filtering",
        "sorting",
        "pagination"
    ],
    "homepage": "https://github.com/dev-toolbelt/laravel-fast-crud",
    "authors": [
        {
            "name": "Kilderson Sena",
            "email": "dersonsena@gmail.com",
            "homepage": "https://github.com/dersonsena",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/dev-toolbelt/laravel-fast-crud/issues",
        "source": "https://github.com/dev-toolbelt/laravel-fast-crud"
    },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test:coverage": "phpunit --configuration tests/phpunit.xml --coverage-html tests/coverage",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpstan": "phpstan analyse --configuration=phpstan.neon"
    },
    "require": {
        "php": "^8.1",
        "dev-toolbelt/jsend-payload": "^1.0",
        "dev-toolbelt/enums": "^1.0",
        "laravel/framework": "^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "DevToolbelt\\LaravelFastCrud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevToolbelt\\LaravelFastCrud\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevToolbelt\\LaravelFastCrud\\FastCrudServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
